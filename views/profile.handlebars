{{#if logged_in}}
<section class="profile">
  <header class="header">
    <div class="details">
      <img src="https://i.pravatar.cc/300" alt="John Doe" class="profile-pic">
      <h1 class="heading">{{user.name}}</h1>
      <div class="location">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12 ,2Z">
          </path>
        </svg>
        <p>{{user.location}}</p>
      </div>
      <div class="stats">
        <div class="col-4">
          <h4>My Comments</h4>
          <p>{{user.comments}}</p>
        </div>
        <div class="col-4">
          <h4>{{user.name}}'s current #1</h4>
          <p>{{movie.rating}}</p>
        </div>
        <div class="col-4">
          <h4>Current Movie ranking:</h4>
          <ul>
            <li>{{movie}}</li>
          </ul>
        </div>
      </div>
    </div>
  </header>
</section>

  {{#each comments as |comment|}}
    <div class="comment">
    <div class="comment__content">
      <h4 class="comment__movie-title">{{movie.name}}</h4>
      <p class="comment__movierating">{{comment.rating}}</p>
      <p class="comment__movie-slogan">{{comment.feedback}}</p>
    </div>
  {{/each}}

{{/if}}
